generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum SourceType {
  RSS
  WEBSITE
}

enum EntityType {
  COMPANY
  PERSON
  PRODUCT
  GEOGRAPHY
  SECTOR
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  name       String
  role       Role     @default(USER)
  digestTime String   @default("06:00")
  createdAt  DateTime @default(now())

  // v2: onboarding
  industryId String?
  onboarded  Boolean  @default(false)

  sources       Source[]
  keywords      Keyword[]
  userArticles  UserArticle[]
  refreshTokens RefreshToken[]
  newsGroups    NewsGroup[]
  industry      Industry? @relation(fields: [industryId], references: [id])
}

model Source {
  id        String     @id @default(uuid())
  userId    String
  url       String
  name      String
  type      SourceType
  active    Boolean    @default(true)
  createdAt DateTime   @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  articles Article[]
}

model Keyword {
  id        String   @id @default(uuid())
  userId    String
  word      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Article {
  id          String    @id @default(uuid())
  sourceId    String
  title       String
  url         String    @unique
  content     String
  summary     String?
  publishedAt DateTime?
  scrapedAt   DateTime  @default(now())

  // v2: enhanced ingestion fields
  author            String?
  tags              String[]
  guid              String?
  rawHtml           String?   @db.Text
  cleanText         String?   @db.Text
  externalLinks     String[]
  entitiesExtracted Boolean   @default(false)

  source         Source          @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  userArticles   UserArticle[]
  entities       ArticleEntity[]
  articleSignals ArticleSignal[]
}

model UserArticle {
  id              String    @id @default(uuid())
  userId          String
  articleId       String
  matched         Boolean   @default(false)
  matchedKeywords String[]
  sent            Boolean   @default(false)
  sentAt          DateTime?
  read            Boolean   @default(false)

  // v2: group assignment
  newsGroupId String?

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  article   Article    @relation(fields: [articleId], references: [id], onDelete: Cascade)
  newsGroup NewsGroup? @relation(fields: [newsGroupId], references: [id], onDelete: SetNull)

  @@unique([userId, articleId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ──────────────────────────────────────────
// V2: Industry & Onboarding
// ──────────────────────────────────────────

model Industry {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())

  signals         IndustrySignal[]
  users           User[]
  defaultSources  IndustryDefaultSource[]
  defaultKeywords IndustryDefaultKeyword[]
}

model IndustrySignal {
  id          String   @id @default(uuid())
  industryId  String
  name        String
  slug        String
  description String?
  createdAt   DateTime @default(now())

  industry       Industry        @relation(fields: [industryId], references: [id], onDelete: Cascade)
  articleSignals ArticleSignal[]

  @@unique([industryId, slug])
}

model IndustryDefaultSource {
  id         String     @id @default(uuid())
  industryId String
  url        String
  name       String
  type       SourceType

  industry Industry @relation(fields: [industryId], references: [id], onDelete: Cascade)

  @@unique([industryId, url])
}

model IndustryDefaultKeyword {
  id         String @id @default(uuid())
  industryId String
  word       String

  industry Industry @relation(fields: [industryId], references: [id], onDelete: Cascade)

  @@unique([industryId, word])
}

// ──────────────────────────────────────────
// V2: Entity Extraction & Signal Classification
// ──────────────────────────────────────────

model ArticleEntity {
  id         String     @id @default(uuid())
  articleId  String
  type       EntityType
  name       String
  confidence Float      @default(1.0)

  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@index([articleId])
  @@index([type, name])
}

model ArticleSignal {
  id               String @id @default(uuid())
  articleId        String
  industrySignalId String
  confidence       Float  @default(1.0)

  article        Article        @relation(fields: [articleId], references: [id], onDelete: Cascade)
  industrySignal IndustrySignal @relation(fields: [industrySignalId], references: [id], onDelete: Cascade)

  @@unique([articleId, industrySignalId])
}

// ──────────────────────────────────────────
// V2: News Groups (Story Clusters)
// ──────────────────────────────────────────

model NewsGroup {
  id               String   @id @default(uuid())
  userId           String
  title            String
  synopsis         String?  @db.Text
  executiveSummary String?  @db.Text
  impactAnalysis   String?  @db.Text
  actionability    String?  @db.Text
  confidence       Float    @default(0.0)
  date             DateTime @default(now())
  createdAt        DateTime @default(now())

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userArticles UserArticle[]

  @@index([userId, date])
}
